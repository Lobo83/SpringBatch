<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<bean id="stepRepeatTemplate" class="org.lobo.spring.batch.step.StepRepeatTemplate"/>
	<bean id="stepRepeatCallback" class="org.lobo.spring.batch.template.MyRepeatCallback"/>
	<bean id="repeatListener" class="org.lobo.spring.batch.listener.MyRepeatListener"/>
	<bean id="exceptionHandler" class="org.lobo.spring.batch.exception.handler.MyRepeatExceptionHandler"/>
</beans>
